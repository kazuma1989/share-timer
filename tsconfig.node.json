// https://www.typescriptlang.org/ja/tsconfig
{
  "include": ["./vite.config.ts", "./vite-*.ts", "./package.json"],

  "compilerOptions": {
    "composite": true,

    "lib": ["ES2021"],
    "module": "CommonJS",
    "target": "ES2021",
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  }
}
