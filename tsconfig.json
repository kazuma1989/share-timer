// https://www.typescriptlang.org/ja/tsconfig
{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "references": [{ "path": "./tsconfig.node.json" }],

  "include": ["./src/**/*"],

  "compilerOptions": {
    // TODO いったんエラー回避
    "jsx": "react-jsx",

    // null check 強化
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // import.meta を使いたい
    "module": "ESNext",

    // JSON を使いたい
    "resolveJsonModule": true,

    // 手軽に tsc コマンドで検査したい
    "noEmit": true
  }
}
